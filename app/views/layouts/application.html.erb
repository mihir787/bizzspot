<!DOCTYPE html>
<html>
<head>
  <title>Bizzspot</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Dropdown Structure -->
  <ul id="signed-in" class="dropdown-content">
    <li><%= link_to "Signout", signout_path, method: "delete", id: "sign_out", class: "black-text" %> </li>
  </ul>

<div class="navbar-fixed">
  <nav class="white" role="navigation">
    <div class="nav-wrapper">
      <a id="logo-container" href="#" class="brand-logo black-text">Logo</a>
      <ul class="right hide-on-med-and-down black-text">
        <li>
          <% if current_user %>
            <a class="dropdown-button black-text" data-activates="signed-in">Signed in as <strong><%= current_user.name %></strong>!<i class="mdi-navigation-arrow-drop-down right"></i></a>
          <% else %>
            <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: "black-text" %>
          <% end %>
          <!-- <% if current_user %>
              Signed in as <strong><%= current_user.name %></strong>!
          <% else %>
            <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: "black-text" %>
          <% end %> -->
        </li>
        <!-- <li>
          <% if current_user %>
            <%= link_to "Sign out", signout_path, method: "delete", id: "sign_out", class: "black-text" %>
          <% end %>
        </li> -->
      </ul>
    </div>
  </nav>
</div>

<%= yield %>

</body>
</html>
